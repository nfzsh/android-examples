<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MActivity">

    <include layout="@layout/appbar"></include>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="空闲桌台"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1号台"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8人座"/>
            <Button
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2号台"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5人座"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4号台"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6人座"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6号台"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8人座"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择"/>

        </LinearLayout>
    </LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7号台"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4人座"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9号台"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8人座"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择"/>

    </LinearLayout>
</LinearLayout>

</LinearLayout>